void setup()
{
  delay(100);  // This delay is needed to let the display to initialize
  //  pinMode(ledPin, OUTPUT);  // sets the pin as output
  pinMode(12, INPUT_PULLUP);
  pinMode(BEEP, OUTPUT);
  screen.begin(SSD1306_SWITCHCAPVCC, 0x3C);  // Initialize display with the I2C address of 0x3C
  screen.clearDisplay();  // Clear the buffer
  screen.setTextColor(WHITE);  // Set color of the text

  screen.drawBitmap(0, 0, nlhs, 128, 64, WHITE);
  screen.display();
  delay(1500);
  screen.clearDisplay();  // Clear the display so we can refresh

  mlx.begin();  //start infrared thermometer
  Serial.begin(9600);
}
