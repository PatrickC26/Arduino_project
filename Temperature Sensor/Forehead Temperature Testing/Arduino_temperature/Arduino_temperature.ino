void loop()
{
  int START = digitalRead(12);

  Serial.println (START);

  if (temp > 43) // If temp is greater than 150
    temp = 0; 
  Serial.println(temp);

  screen.clearDisplay();

  if (START == 0) {
    screen.clearDisplay();

    temp = mlx.readObjectTempC(); //comment this line if you want to test
    tone1.tone (2000); // Send 1KHz sound signal...


    screen.clearDisplay();
    screen.setFont();
    screen.setCursor(30, 0); // (x,y)
    screen.println("TEMPERATURE");  // Text or value to print


    screen.setCursor(0, 5); // (x,y)
    screen.println("---------------------");  // Text or value to print

    delay (200);
    // Print temperature
    char string[10];  // Create a character array of 10 characters
    // Convert float to a string:
    dtostrf(temp + fixed, 4, 1, string); // (<variable>,<amount of digits we are going to use>,<amount of decimal digits>,<string name>)

    screen.setFont(&FreeSans12pt7b);  // Set a custom font
    screen.setCursor(25, 35); // (x,y)
    screen.println(string);  // Text or value to print
    screen.setCursor(83, 35); // (x,y)
    screen.println("C");  // Text or value to print
    screen.setCursor(77, 21); // (x,y)
    screen.println(".");  // Text or value to print

    screen.display();
    // delay(100);        // ...for 1 sec
    tone1.noTone ();
    delay(1800);


  }
  else {
    screen.clearDisplay();
    screen.setFont();  // Set a custom font
    screen.setCursor(5, 0); // (x,y)
    screen.println("Forehead Thermometer");
    screen.setFont(&FreeSans9pt7b);  // Set a custom font
    screen.setCursor(0, 35); // (x,y)
    screen.println("PRESS  START");  // Text or value to print
